<h1>Editar {{user.name}}</h1>
<form action="/user/update/{{user.id}}" method="POST" class="form">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Ocupação:</label>
        <input type="text" name="occupation" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Cadastrar">
</form>
<div class="address-container">
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite a rua">
        </div>
        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da residência">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Qual a cidade?">
        </div>
        <input type="submit" value="Inserir Endereço">
    </form>
</div>
    <div>
        {{#each user.Addresses}}
            <div class="addresses">#{{this.id}} - 
                {{this.street}} - 
                {{this.number}} - 
                {{this.city}} - 
                <form action="/address/delete" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="UserId" value="{{this.UserId}}">
                    <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>